<ul>
  <% if ::Refinery::Marketing::Admin::ShowsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.marketing_admin_shows_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_marketing_admin_show_path,
                 :class => "add_icon" %>
  </li>
  <%= render 'refinery/marketing/admin/shared/links' %>
<% if !searching? && ::Refinery::Marketing::Admin::ShowsController.sortable? && ::Refinery::Marketing::Show.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Shows"),
                 refinery.marketing_admin_shows_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Shows"),
                 refinery.marketing_admin_shows_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
