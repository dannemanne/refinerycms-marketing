<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(brand) -%>">
  <span class='title'>
    <%= brand.name %>
    <span class="preview">
      <%= t('.preview', :created_at => l(brand.created_at, :format => :short)) %>
    </span>
  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.marketing_brand_path(brand),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_marketing_admin_brand_path(brand),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.marketing_admin_brand_path(brand),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => brand.name),
        :method => :delete %>
  </span>
</li>
