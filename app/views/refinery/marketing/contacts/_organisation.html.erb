<section class="contact-card">
  <h1 class="cc-attribute cc-name">
    <%=raw contact.name %>
  </h1>

  <% if contact.industry.present? %>
    <p class="cc-attribute cc-industry">Industry: <%= contact.industry %></p>
  <% end %>

  <h3>Address</h3>
  <% if contact.address.present? %>
    <p class="cc-attribute cc-address"><%= contact.address %></p>
  <% else %>
    <p class="cc-attribute cc-missing">Street Address</p>
  <% end %>

  <% if contact.city.present? %>
    <p class="cc-attribute cc-city"><%= contact.city %></p>
  <% else %>
    <p class="cc-attribute cc-missing">City</p>
  <% end %>

  <% if contact.country.present? %>
    <p class="cc-attribute cc-country"><%= contact.country %></p>
  <% else %>
    <p class="cc-attribute cc-missing">Country</p>
  <% end %>

  <h3>Contact Info</h3>
  <% if contact.phone.present? %>
    <p class="cc-attribute cc-phone">Main: <%= contact.phone %></p>
  <% end %>

  <% if contact.mobile.present? %>
    <p class="cc-attribute cc-mobile">Mobile<%= contact.mobile %></p>
  <% end %>

  <% if contact.fax.present? %>
    <p class="cc-attribute cc-fax">Fax: <%= contact.fax %></p>
  <% end %>

  <% if contact.skype.present? %>
    <p class="cc-attribute cc-skype">Skype: <%= contact.skype %></p>
  <% end %>

  <% if contact.email.present? %>
    <p class="cc-attribute cc-email"><%= mail_to contact.email  %></p>
  <% end %>

  <% if contact.website.present? %>
    <p class="cc-attribute cc-website"><%= contact.website %></p>
  <% end %>

  <% if contact.facebook.present? %>
    <p class="cc-attribute cc-facebook">Facebook: <%= contact.facebook %></p>
  <% end %>

  <% if contact.twitter.present? %>
    <p class="cc-attribute cc-twitter">Twitter: <%= contact.twitter %></p>
  <% end %>

  <% if contact.linked_in.present? %>
    <p class="cc-attribute cc-linked_in">LinkedIn: <%= contact.linked_in %></p>
  <% end %>

  <% if contact.tags_joined_by_comma.present? %>
    <h3>Tags</h3>
    <p class="cc-attribute cc-tags"><%= contact.tags_joined_by_comma.split(', ').map(&:capitalize).join(', ') %></p>
  <% end %>

  <h3>Employees</h3>
  <% if contact.employees.any? %>
    <% contact.employees.each do |employee| %>
      <p class="cc-attribute cc-employee">
        <%= link_to employee.name, refinery.marketing_contact_path(employee) %>
        <% if employee.phone.present? %>
          - <%= employee.phone %>
        <% elsif employee.mobile.present? %>
          - <%= employee.mobile %>
        <% end %>
        <% if employee.email.present? %>
          - <%= mail_to employee.email %>
        <% end %>
      </p>
    <% end %>
  <% else %>
    <p class="cc-attribute italic">No Employees registered</p>
  <% end %>
</section>
